
@{
    ViewBag.Title = "CreateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Referans Ekleme Sayfası</h2>

<form method="post">
    <label>Başlık</label>
    <input type="text" class="table table-bordered" name="Title" />
    <br />
    <label>Referans Açıklaması</label>
    <textarea rows="4" class="table table-bordered" name="Description"></textarea>
    <br />
    <label>Ad Soyad</label>
    <input type="text" class="table table-bordered" name="NameSurname" />
    <br />
    <label> Referans Resim Yolu</label>
    <input type="text" class="table table-bordered" name="ImageUrl" />
    <br />
    <label>İşi</label>
    <input type="text" class="table table-bordered" name="Job" />
    <br />
    <label>Statü</label>
    <input type="text" class="table table-bordered" name="Status" />
    <br />
    <button class="btn btn-info">Referansı Kaydet</button>
</form>