@model List<AcunMedyaPortfolyo.Models.TblService>
@{
    ViewBag.Title = "ServiceList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Hizmetler</h2>

<table class="table table-bordered">
    <tr>
        <th>Hizmet Id</th>
        <th>Başlık</th>
        <th>Hizmet Açıklaması</th>
        <th>Hizmet Resim Yolu</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ServiceID</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td><img src="@item.ImageUrl" class="img-fluid" style="width:200px; height:150px" /> </td>
            <td><a href="/Service/DeleteService/@item.ServiceID" class="btn btn-danger">Sil</a></td>
            <td><a href="#" class="btn btn-success">Güncelle</a></td>
        </tr>
    }

</table>
<a href="/Service/CreateService" class="btn btn-primary">Yeni Servis Girişi</a>
