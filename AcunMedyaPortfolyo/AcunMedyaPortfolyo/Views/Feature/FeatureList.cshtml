@model List<AcunMedyaPortfolyo.Models.TblFeature>
@{
    ViewBag.Title = "FeatureList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Özellikler</h2>

<table class="table table-bordered">
    <tr>
        <th>Özellik İd</th>
        <th>Ad Soyad</th>
        <th>Özellik Açıklaması</th>
        <th>Proje Adı</th>
        <th>Resim Yolu</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.FeatureID</td>
            <td>@item.NameSurname</td>
            <td>@item.Description</td>
            <td>@item.ProjectName</td>
            <td><img src="@item.ImageUrl" class="img-fluid" style="width:200px; height:150px" /> </td>
            <td><a href="/Feature/DeleteFeature/@item.FeatureID" class="btn btn-danger">Sil</a></td>
            <td><a href="#" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Feature/CreateFeature" class="btn btn-primary">Yeni Özellik Girişi</a>