@model List<AcunMedyaPortfolyo.Models.TblCategory>
@{
    ViewBag.Title = "CategoryList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Categori Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>Categori Id</th>
        <th>Categori Name</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach(var item in Model)
    {
    <tr>
        <td>@item.CategoryId</td>
        <td>@item.CategoryName</td>
        <td><a href="/Category/DeleteCategory/@item.CategoryId" class="btn btn-danger">Sil</a></td>
        <td><a href="/Category/UpdateCategory/@item.CategoryId" class="btn btn-success">Güncelle</a></td>
    </tr>
    }

</table>
<a href="/Category/CreateCategory" class="btn btn-primary">Yeni Category Girişi</a>